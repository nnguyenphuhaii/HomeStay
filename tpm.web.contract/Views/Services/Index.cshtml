@{
    List<string> BreadCrumb = new List<string>();
    BreadCrumb.Add("<span class='breadcrumb-item active'> Danh sách loại dịch vụ</span>");
    ViewBag.BreadCrumb = BreadCrumb;
}
<script src="~/assets/js/vendor/notifications/noty.min.js"></script>
<script src="/libjs/plugins/jalert.js"></script>

<!-- Content area -->
<div class="content" ng-controller="IndexController">
    <!-- Search field -->
    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="col-12">
                    <div class="input-group">
                        <div class="d-sm-flex align-items-sm-start" style="flex: 1 1 auto; margin-right: calc(.5 * var(--gutter-x));">
                            <div class="form-control-feedback form-control-feedback-start flex-grow-1 mb-3 mb-sm-0">
                                <input type="text" class="form-control" placeholder="Tên loại" ng-model="ServiceType.Search.Text">
                                <div class="form-control-feedback-icon">
                                    <i class="ph-magnifying-glass"></i>
                                </div>
                            </div>
                        </div>
                        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#modal_add_service_type" style="border-radius: var(--border-radius);">
                            <i class="ph-plus me-2"></i>
                            Thêm Loại Dịch Vụ
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- /search field -->
    <!-- Bordered table -->
    <div class="card">
        <div class="table-responsive">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th style="width:50px">STT</th>
                        <th>Tên dịch vụ</th>
                        <th style="width:170px; text-align:center;">Ngày cập nhật</th>
                        <th style="width:60px"> </th>
                    </tr>
                </thead>
                <tbody>
                    @*<tr ng-repeat="item in ServiceType.Lst">*@
                    <tr ng-repeat="item in ServiceType.Filter = (ServiceType.Lst | filter : ServiceType.Search.CustomFilter) | limitTo: ServiceType.Pager.PageSize: ServiceType.Pager.StartIndex">
                        <td style="text-align:center">{{$index + 1 + ServiceType.Pager.StartIndex}}</td>
                        <td>{{item.Name}}</td>
                        <td style="text-align:center">{{item.UpdatedDate | dateFormat: 'dd/MM/yyyy HH:mm'}}</td>
                        <td style="text-align: center;vertical-align: middle; padding: 0px; margin: 0;">
                            <a href="/Services/StepManager/{{item.Service_Type_ID}}" class="text-info">
								<i class="ph-squares-four" title="Quản lý các bước"></i>
							</a>
                            <a href="javascript:void(0);" ng-click="Edit(item.Service_Type_ID, item.Name, $index + 1 + ServiceType.Pager.StartIndex);" data-bs-toggle="modal" data-bs-target="#modal_edit_service_type">
                                <i class="icon-pencil7 icon-08x" title="Cập nhật"></i>
                            </a>
                            <a href="javascript:void(0);" id="sweet_warning" ng-click="Delete(item.Service_Type_ID, $index + 1 + ServiceType.Pager.StartIndex);" class="text-danger">
                                <i class="icon-bin icon-08x" title="Xóa"></i>
                            </a>
                        </td>
                    </tr>
                    <tr ng-show="ServiceType.Filter.length == 0" style="text-align:center">
                        <td colspan="5">Không có dữ liệu</td>
                    </tr>
                    <tr ng-show="ServiceType.Filter.length > 0">
                        <td colspan="5">
                            <div style="text-align:right;padding:0px;">
                                <pagination-style3 total-items="ServiceType.Filter.length" pager="ServiceType.Pager" fn-call-back="ServiceType.Search.Paging(PageClicked)"></pagination-style3>
                            </div>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
    <!-- /bordered table -->
    @*popup thêm loại dịch vụ*@
    <div id="modal_add_service_type" class="modal fade" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Thêm loại dịch vụ</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>

                <form action="#">
                    <div class="modal-body">
                        <div class="mb-3">
                            <div class="row">
                                <div>
                                    <label class="form-label">Tên loại dịch vụ</label>
                                    <input type="text" ng-model="formData.name" placeholder="Thiết kế Website" class="form-control" />
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-light" data-bs-dismiss="modal">Đóng</button>
                        <button type="submit" ng-click="submitForm()" onClick="return false;" class="btn btn-primary">Lưu</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    @*popup sửa loại dịch vụ*@
    <div id="modal_edit_service_type" class="modal fade" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Sửa loại dịch vụ</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>

                <form action="#">
                    <div class="modal-body">
                        <div class="mb-3">
                            <div class="row">
                                <div>
                                    <label class="form-label">Tên loại dịch vụ</label>
                                    <input type="text" ng-model="formEditData.name" placeholder="Thiết kế Website" class="form-control" id="nameInput">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-light" data-bs-dismiss="modal">Đóng</button>
                        <button type="submit" ng-click="submitEditForm()" onClick="return false;" class="btn btn-primary">Lưu</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<!-- /content area -->
@section jsScript{
    <script src="~/script-handler/contract-service-types/index-controller.js"></script>
}
